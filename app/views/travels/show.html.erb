<h1><%= @travel.name %></h1>

<h2>Add a new bill</h2>
<%= form_for([@travel, @travel.bills.build]) do |f| %>
	<p>
		<%= f.label :payer %>
		<%= f.text_field :payer %>
	</p>
	<p>
		<%= f.label :cost %>
		<%= f.text_field :cost %>
	</p>
	<p>
		<%= f.label :subject %>
		<%= f.text_field :subject %>
	</p>
	<p>
		<%= f.label :date %>
		<%= f.datetime_select :date %>
	</p>
	<p>
		<%= f.label :comment %>
		<%= f.text_area :comment %>
	</p>
	<%= f.submit %>
<% end %>

<h2>Bill list</h2>
<ul>
	<% @travel.bills.each do |bill| %>
		<li><%= bill.subject %> cost:<%= bill.cost %></li>
	<% end %>
</ul>

<%= link_to 'Back to travel list', travels_path %>